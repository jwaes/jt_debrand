                <td align="center" style="padding: 8px; font-size:11px;" />
            </xpath>
        </template>

        <template id="mail_notification_light" inherit_id="mail.mail_notification_light">
            <xpath expr="table[last()]/tr[last()]/td[last()]" position="replace">
                <td/>
